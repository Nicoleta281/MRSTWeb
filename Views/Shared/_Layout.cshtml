    <script>
        $(document).ready(function () {
            // Asigură-te că tab-urile Bootstrap funcționează
            $('#petTabs a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            });

            // Verifică URL-ul și setează tab-ul activ (ex: ?tab=cats)
            var url = window.location.href;
            if (url.includes("#cats")) {
                $('#petTabs a[href="#cats"]').tab('show');
            } else {
                $('#petTabs a[href="#dogs"]').tab('show');
            }
        });
    </script>
