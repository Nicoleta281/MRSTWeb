

@model List<WebApplication1.Models.BlogPost>

@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-wrap hero-wrap-2" style="background-image: url('@Url.Content("~/Content/images/bg_2.jpg")');"
         data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs mb-2">
                    <span class="mr-2">
                        <a href="@Url.Action("Index", "Home")">Acasă <i class="ion-ios-arrow-forward"></i></a>
                    </span>
                    <span>Blog <i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h1 class="mb-0 bread">Blog</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row d-flex">
            @if (Model != null && Model.Any())
            {
                foreach (var post in Model) // Aici definim variabila `post`
                {
                    <div class="col-md-4 d-flex ftco-animate">
                        <div class="blog-entry align-self-stretch">
                            <a href="@Url.Action("BlogSingle", "Home", new { id = post.Id })" class="block-20 rounded"
                               style="background-image: url('@Url.Content(post.ImageUrl)')">
                            </a>
                            <div class="text p-4">
                                <h3 class="heading">
                                    <a href="@Url.Action("BlogSingle", "Home", new { id = post.Id })">@post.Title</a>
                                </h3>
                                <p>@post.ShortDescription</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center">Nu există articole disponibile.</p>
            }
        </div>
    </div>
</section>
