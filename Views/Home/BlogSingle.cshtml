

@model WebApplication1.Models.BlogPost

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-wrap hero-wrap-2" style="background-image: url('@Url.Content(Model.ImageUrl)'); background-size: cover;" data-stellar-background-ratio="0.5">

    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end">
            <div class="col-md-9 ftco-animate pb-5">
                <h1 class="mb-0 bread">@Model.Title</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 ftco-animate">
                <h2>@Model.Title</h2>
                <p>@Model.Content</p>
                <a href="@Url.Action("Blog", "Home")" class="btn btn-secondary">Înapoi la blog</a>
            </div>
        </div>
    </div>
</section>



